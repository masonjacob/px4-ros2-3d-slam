// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "PX4 ROS2",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "registry.hub.docker.com/px4io/px4-dev-ros2-foxy",
	"workspaceMount": "source=${localWorkspaceFolder}/workspace,target=/root/workspace,type=bind",
	"workspaceFolder": "/root/workspace",
	"mounts": [
		"source=${localWorkspaceFolder}/PX4-Autopilot,target=/src/PX4-Autopilot,type=bind,consistency=cached"
	],
	"containerEnv": {
		"DISPLAY": "0",
		"WAYLAND_DISPLAY": "wayland-0",
		"XDG_RUNTIME_DIR": "/mnt/wslg/runtime-dir",
		"PULSE_SERVER": "/mnt/wslg/PulseServer"
	},
	"runArgs": [
		"--network=host",
		"--privileged",
		"-v/run/desktop/mnt/host/wslg/.X11-unix:/tmp/.X11-unix",
		"-v/run/desktop/mnt/host/wslg:/mnt/wslg"
	]
	// "containerEnv":
	// 	"DISPLAY": "${localEnv:DISPLAY}",
	// 	"QT_X11_NO_MITSHM": "1"
	// }
